<!DOCTYPE html>
<html lang="en">

<head>

    <%- include("../partials/head-no-css") %>

        <link rel="stylesheet" href="/css/style.css" />
        <link rel="stylesheet" href="/css/theme.css" />
        <link rel="stylesheet" href="/css/header.css" />
        <link rel="stylesheet" href="/css/footer.css" />
        <link rel="stylesheet" href="/css/productDetail.css" />
        <link rel="stylesheet" href="/css/tablet-productDetail.css" />
        <link rel="stylesheet" href="/css/tablet.css" />
        <link rel="stylesheet" href="/css/desktop-index.css" />
        <link rel="stylesheet" href="/css/desktop-clientDetail.css" />

        <script src="https://code.jquery.com/jquery-3.6.0.min.js"
            integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
        <!-- <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script> -->
        <!-- <script src="/js/deleteAlert.js"></script> -->

        <title>Soluciones Profesionales</title>
</head>

<body>

    <%- include("../partials/header") %>
        <%- include("../partials/nav-bar") %>


            <main>
                <div class="allProduct">
                    <div class="prof-title-father">

                        <h2 class="title-per-device-productDetail">Perfil de:</h2>


                        <p class="name-per-device-productDetail">
                            <%= clientFound.firstName + " " + clientFound.lastName %>
                        </p>
                        <!--el nombre cambia segun el profesonial  -->
                    </div>
                    <div class="columns-productDetail-father">
                        <!-- <div class="column12-productDetail"> -->

                        <!-- <div class="top-flex-mobile"> -->
                        <div class="prof-avatar">
                            <!-- Foto cargada por el cliente (.jpg, .png, .bmp) -->

                            <img src="/images/clients/<%=clientFound.avatar%>">
                        </div>

                        <!-- </div> -->
                        <!-- </div> -->
                        <!-- <div class="column22-productDetail"> -->

                        <div class="details">
                            <div class="details-info">
                                <h2 class="title-prof-name">Mis Datos</h2>
                            </div>
                            <div class="details-info">
                                <p>Email: </p>
                                <p>
                                    <%=clientFound.email %>
                                </p>
                            </div>
                            <div class="details-info">
                                <p>DNI: </p>
                                <p>
                                    <%=clientFound.dni%>
                                </p>
                            </div>
                            <div class="details-info">
                                <p>Ciudad: </p>
                                <p>
                                    <%=clientFound.cities.province%>
                                </p>
                            </div>
                            <div class="details-info">
                                <p>Direccion: </p>
                                <p>
                                    <%=clientFound.address %>
                                </p>
                            </div>
                        </div>

                        <!-- </div> -->

                    </div>

                    <div class="buttons-below-avatar">
                        <div>
                            <a href="/clients/<%=clientFound.dni %>/editClient">
                                <button type="submit">Editar Perfil</button>
                            </a>
                        </div>
                        <form id="delete-form" class="delete-form"
                            action="/clients/<%= clientFound.dni %>/deleteClient?_method=DELETE" method="post">
                            <button type="submit">Eliminar Perfil</button>

                        </form>
                    </div>

                    <h3 class=" title-categories">Tambien te Puede Interesar</h3>
                    <section class="icon-categories">
                        <article class="icon-article">

                            <a href="../rubros/Mecanica">

                                <i class="fas fa-wrench"></i>
                                <p class="icon-txt">Mecanicos/as</p>
                            </a>
                        </article>
                        <article class="icon-article">
                            <a href="../rubros/Electricidad">

                                <i class="fas fa-plug"></i>
                                <p class="icon-txt">Electricistas</p>
                            </a>
                        </article>
                        <article class="icon-article">
                            <a href="../rubros/Odontologia">

                                <i class="fas fa-tooth"></i>
                                <p class="icon-txt">Odontologos/as</p>
                            </a>
                        </article>

                        <article class="icon-article">
                            <a href="../rubros/Plomeria">

                                <i class="fas fa-faucet"></i>
                                <p class="icon-txt">Plomeros/as</p>
                            </a>
                        </article>

                        <article class="icon-article">
                            <a href="../rubros/Carpinteria">

                                <i class="fas fa-hammer"></i>
                                <p class="icon-txt">Carpinteros/as/
                                    <p>
                            </a>
                        </article>
                        <article class="icon-article">
                            <a href="../rubros/Pintura">

                                <i class="fas fa-paint-roller"></i>
                                <p class="icon-txt">Pintores/as</p>
                            </a>
                        </article>
                    </section>

                    <%- include("../partials/ad-bottom-body") %>

                </div>
            </main>

            <%- include("../partials/footer") %>

</body>

</html>